        android:text="Make Photo" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="162dp"
        android:layout_height="70dp"
        android:text="TextView" />

    <Button
        android:id="@+id/button"
        android:layout_width="213dp"
        android:layout_height="178dp"
        android:text="Button" />

</RelativeLayout>